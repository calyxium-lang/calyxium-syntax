{
  "name": "calyxium-syntax",
  "displayName": "Calyxium Syntax",
  "description": "Syntax highlighting for Calyxium",
  "version": "0.0.1",
  "repository": "https://github.com/calyxium-lang/calyxium-syntax",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "calyxium",
      "aliases": ["calyxium", "calyxium"],
      "extensions": [".cx",".cxm"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "calyxium",
      "scopeName": "source.calyxium",
      "path": "./syntaxes/calyxium.tmLanguage.json"
    }]
  }
}
